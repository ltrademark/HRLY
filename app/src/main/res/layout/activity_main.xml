<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:windowBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_item"
            android:showDividers="middle"
            android:paddingTop="?attr/actionBarSize"
            android:paddingBottom="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider_item"
                android:showDividers="middle"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_hourly_chime"
                            android:textSize="18sp"
                            android:textColor="?android:textColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_hourly_chime_description"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/enable_hourly_chime" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerBatteryWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/stat_notify_error"
                        app:tint="#FF6E40"
                        android:contentDescription="Warning"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/battery_warning_text"
                        android:textColor="#FF6E40"
                        android:textSize="12sp"
                        android:layout_marginEnd="12dp"/>

                    <Button
                        android:id="@+id/btnFixBattery"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fix_button"
                        android:textColor="#FF6E40"
                        app:strokeColor="#FF6E40"
                        app:cornerRadius="50dp"
                        android:minWidth="0dp"
                        android:paddingHorizontal="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerCustomSoundsToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/custom_sounds"
                            android:textSize="18sp"
                            android:textColor="?android:textColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/custom_sounds_description"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCustomSounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerSoundPickers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/short_tone"
                                android:textColor="?android:textColor"/>

                            <TextView
                                android:id="@+id/txtShortToneName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_tone"
                                android:textSize="12sp"
                                android:textColor="?android:textColorSecondary"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnClearShort"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/clear_sound_selection"
                            android:layout_marginEnd="16dp"
                            app:tint="?android:textColorSecondary" />

                        <Button
                            android:id="@+id/btnPickShort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_sound"
                            app:cornerRadius="50dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/long_tone"
                                android:textColor="?android:textColor"/>

                            <TextView
                                android:id="@+id/txtLongToneName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_tone"
                                android:textSize="12sp"
                                android:textColor="?android:textColorSecondary"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnClearLong"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/clear_sound_selection"
                            android:layout_marginEnd="16dp"
                            app:tint="?android:textColorSecondary" />

                        <Button
                            android:id="@+id/btnPickLong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_sound"
                            app:cornerRadius="50dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerQuietToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiet_hours"
                            android:textSize="18sp"
                            android:textColor="?android:textColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiet_hours_description"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchQuietHours"
                        android:layout_width="wrap_content"
                        android:contentDescription="@string/quiet_hours_description"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerQuietPickers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quiet_start"
                                android:textColor="?android:textColor"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnQuietStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 PM"
                            app:cornerRadius="50dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quiet_end"
                                android:textColor="?android:textColor"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnQuietEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7:00 AM"
                            app:cornerRadius="50dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/debugLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="?android:statusBarColor"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/settingsContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_menu"
                    android:textColor="?android:textColor"
                    android:layout_gravity="start"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnTest8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    app:cornerRadius="50dp"
                    android:text="@string/test_8_logic" />

                <Button
                    android:id="@+id/btnTest12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    app:cornerRadius="50dp"
                    android:text="@string/test_12_logic" />

                <Button
                    android:id="@+id/btnTestNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    app:cornerRadius="50dp"
                    android:text="@string/force_chime_now" />

                <Button
                    android:id="@+id/btnTestVisual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test_visual_pulse"
                    android:textColor="@android:color/white"
                    app:cornerRadius="50dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/footerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/footer_copyright"
                android:textSize="14sp"
                android:textColor="?android:textColorSecondary"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>